<br /><br />
  <div align="center" width="100%">
<table width="50%" cellpadding="2" cellspacing="0">
  <tr bgcolor =" #378bf8" style="color:white">
    <th>Billing_mode</th>
    <th>Mrno</th>
	<th>Bill_no</th>
	<th>patient_name</th>
	
  </tr>

<% @postdiscounts.each do |postdiscount| %>
<% if((postdiscount.id % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
  end %>
  <tr>
    <td class='<%= id %>'><%=h postdiscount.billing_mode %></td>
    <td class='<%= id %>'><%=h postdiscount.mr_no %></td>
	<td class='<%= id %>'><%=h postdiscount.bill_no %></td>
	<td class='<%= id %>'><%=h postdiscount.patient_name %></td>
    
	<% if @value[1]==49 %>
    <td class='<%= id %>'><%= link_to 'Show', postdiscount %></td>
    <% end %>
	<% if @value[2]==49 %>
	<td class='<%= id %>'><%= link_to 'Edit', edit_postdiscount_path(postdiscount) %></td>
    <% end %>
	<% if @value[3]==49 %>
	<td class='<%= id %>'><%= link_to 'Destroy', postdiscount, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
</div>
<br />
<% if @value[0]==49 %>
<td><%= link_to 'New', new_postdiscount_path %></td>
<% end %>