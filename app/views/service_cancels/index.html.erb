
<br /><br />
<div align="center">
<table width="80%" cellpadding="2" cellspacing="0">
  <tr bgcolor ="#378bf8" style="color:white">
    <th>Mr no</th>
    <th>Reg no</th>
    <th>Patient name</th>
    <th>Father name</th>
    <th>Floor</th>
    <th>Room</th>
    <th>Ward</th>
    <th>Bed</th>
	<th colspan="3">Permissions</th>
  </tr>

<% @service_cancels.each do |service_cancel| %>
    <% if((ipadmission.id % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
  end %>
  <tr>
    <td class='<%= id %>'><%=h service_cancel.mr_no %></td>
    <td class='<%= id %>'><%=h service_cancel.reg_no %></td>
    <td class='<%= id %>'><%=h service_cancel.patient_name %></td>
    <td class='<%= id %>'><%=h service_cancel.father_name %></td>
    <td class='<%= id %>'><%=h service_cancel.floor %></td>
    <td class='<%= id %>'><%=h service_cancel.room %></td>
    <td class='<%= id %>'><%=h service_cancel.ward %></td>
    <td class='<%= id %>'><%=h service_cancel.bed %></td>
	
    <% if @value[1]==49 %>
	<td class='<%= id %>'><%= link_to 'Show', service_cancel %></td>
	<% end %>
	<% if @value[2]==49 %>
    <td class='<%= id %>'><%= link_to 'Edit', edit_service_cancel_path(service_cancel) %></td>
	<% end %>
	<% if @value[3]==49 %>
    <td class='<%= id %>'><%= link_to 'Destroy', service_cancel, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
</div>
<br />
<% if @value[0]==49 %>
<td><%= link_to 'New', new_service_cancel_path %></td>
<% end %>