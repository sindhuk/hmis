<h3>Editing holidaymaster</h3>
<% form_for(@holidaymaster) do |f| %>
  <%= f.error_messages %>

  <br /><br />
<div align="center">
  <table width="40%" style="border:#966 solid 1px;border-color:#FFF0; " border="1" cellspacing="0" cellpadding="4">
    <tr>
		<td><%= f.label :holidaycode %></td> 
		<td><%= f.text_field :code %></td>
	</tr>
   <tr>
	<td><%= f.label :holidayname %></td> 
    <td><%= f.text_field :name %></td>
   </tr>
   <tr>
	<td><%= f.label :date %></td> 
    <td><%= f.text_field :date %></td>
   </tr>
 </table>
 <br />
 <%= f.submit 'Update' %>
</div> 
<% end %>

