
<br /><br />
  <div align="center" width="100%">
<table width="60%" cellpadding="2" cellspacing="0">
  <tr bgcolor ="#378bf8" style="color:white">
    <th>Mr no</th>
    <th>Reg no</th>
    <th>Patient name</th>
    <th>Father name</th>
    <th>Floor</th>
    <th>Ward</th>
    <th>Room</th>
    <th>Bed</th>
    <th colspan="3">Permissions</th>
  </tr>

<% @additional_bed_allocations.each do |additional_bed_allocation| %>
<% if((additional_bed_allocation.id % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
  end %>
  <tr>
    <td class='<%= id %>'><%=h additional_bed_allocation.mr_no %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.reg_no %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.patient_name %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.father_name %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.floor %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.ward %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.room %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.bed %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.a_floor %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.a_ward %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.a_room %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.a_bed %></td>
    <td class='<%= id %>'><%=h additional_bed_allocation.charge_per_day %></td>
	
	<% if @value[1]==49 %>
    <td class='<%= id %>'><%= link_to 'Show', additional_bed_allocation %></td>
	<% end %>
	<% if @value[2]==49 %>
    <td class='<%= id %>'><%= link_to 'Edit', edit_additional_bed_allocation_path(additional_bed_allocation) %></td>
	<% end %>
	<% if @value[3]==49 %>
    <td class='<%= id %>'><%= link_to 'Destroy', additional_bed_allocation, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
</div>
<% if @value[0]==49 %>
<%= link_to 'New', new_additional_bed_allocation_path%>
<% end %>