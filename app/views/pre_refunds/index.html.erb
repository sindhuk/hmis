<div align="center" width="100%">
	<table width="80%" cellpadding="2" cellspacing="0">
  <tr bgcolor =" #378bf8" style="color:white">
    <th>Mr no</th>
    <th>Reg no</th>
    <th>Patient name</th>
    <th>Father name</th>
    <th>Floor</th>
    <th>Ward</th>
    <th>Room</th>
    <th>Bed</th>
    <th>Advance amount</th>
    <th>Refund</th>
    <th colspan="3">Permissions</th>
  </tr>

<% @pre_refunds.each do |pre_refund| %>
       <% if((countrymaster.id % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
  end %>
  <tr>
    <td class='<%= id %>'><%=h pre_refund.mr_no %></td>
    <td class='<%= id %>'><%=h pre_refund.reg_no %></td>
    <td class='<%= id %>'><%=h pre_refund.patient_name %></td>
    <td class='<%= id %>'><%=h pre_refund.father_name %></td>
    <td class='<%= id %>'><%=h pre_refund.floor %></td>
    <td class='<%= id %>'><%=h pre_refund.ward %></td>
    <td class='<%= id %>'><%=h pre_refund.room %></td>
    <td class='<%= id %>'><%=h pre_refund.bed %></td>
    <td class='<%= id %>'><%=h pre_refund.advance_amount %></td>
    <td class='<%= id %>'><%=h pre_refund.refund %></td>
    
	<% if @value[1]==49 %>
    <td class='<%= id %>'><%= link_to 'Show', pre_refund %></td>
	<% end %>
    <% if @value[2]==49 %>
	<td class='<%= id %>'><%= link_to 'Edit', edit_pre_refund_path(pre_refund) %></td>
	<% end %>
    <% if @value[3]==49 %>
	<td class='<%= id %>'><%= link_to 'Destroy', pre_refund, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if @value[0]==49 %>
<%= link_to 'New', new_pre_refund_path %>
<% end %>