<h1>Listing OccupationMasters</h1>
<br /><br />
<div align="center" width="90%">
<table width="40%" style="border:#966 solid 1px;border-color:#FFF0; " border="1" cellspacing="0" cellpadding="4">

  <tr>
    <th>OccupationName</th>
    <th>OccupationCode</th>
	<th>Show</th>
	 <th>Edit</th>
	 <th>Destroy</th>
  </tr>

<% @occupationmasters.each do |occupationmaster| %>
<% if((occupationmaster.id % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
  end %>
  <tr>
    <td class='<%= id %>'><%=h occupationmaster.name %></td>
    <td class='<%= id %>'><%=h occupationmaster.code %></td>
    <td class='<%= id %>'><%= link_to 'Show', occupationmaster %></td>
    <td class='<%= id %>'><%= link_to 'Edit', edit_occupationmaster_path(occupationmaster) %></td>
    <td class='<%= id %>'><%= link_to 'Destroy', occupationmaster, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'New occupationmaster', new_occupationmaster_path %>