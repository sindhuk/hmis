<br /><br /><br />
<div  >
<table width="100%" cellpadding="2" style="border:1px solid white">
  <tr bgcolor =" #378bf8" style="color:white">
    <th>Admn No</th>
    <th>Admn Date</th>
    <th>Time</th>
    <th>Police station</th>
    <th>Mr no</th>
    <th>Patient name</th>
    <th>Reg no</th>
    <th>Doctor</th>
    <th>Mobile no</th>
	<th colspan="3">Permissions</th>
    </tr>

<% @ipadmissions.each do |ipadmission| %>
 <% if((ipadmission.id % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
  end %>
  <tr>
    <td class='<%= id %>'><%=h ipadmission.admission_no %></td>
    <td class='<%= id %>'><%=h ipadmission.admission_date %></td>
    <td class='<%= id %>'><%=h ipadmission.time %></td>
    <td class='<%= id %>'><%=h ipadmission.authorised_police_station %></td>
    <td class='<%= id %>'><%=h ipadmission.mr_no %></td>
    <td class='<%= id %>'><%=h ipadmission.patient_name %></td>
    <td class='<%= id %>'><%=h ipadmission.reg_no %></td>
    <td class='<%= id %>'><%=h ipadmission.doctor %></td>
    <td class='<%= id %>'><%=h ipadmission.mobile_no %></td>
    
	<% if @value[1]==49 %>
    <td class='<%= id %>'><%= link_to 'Show', ipadmission %></td>
    <% end %>
	<% if @value[2]==49 %>
	<td class='<%= id %>'><%= link_to 'Edit', edit_ipadmission_path(ipadmission) %></td>
    <% end %>
	<% if @value[3]==49 %>
	<td class='<%= id %>'><%= link_to 'Destroy', ipadmission, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
</div>
<br />
<% if @value[0]==49 %>
<td><%= link_to 'New', new_ipadmission_path %></td>
<% end %>