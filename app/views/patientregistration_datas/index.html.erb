<br />
<h3><center><font color="#015a84">Listing Records</font></center></h3>
<table align="center" cellpadding="4" style="border:1px solid white" >
  <tr  bgcolor=" #378bf8" style="color:white" >
    <th>Registration</th>
    <th>Mr no</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Date of birth</th>
    <th>Gender</th>
    <th>Age</th>
    <th>Marital status</th>
	<th colspan="3">Permissions</th>
  </tr>

<% @patientregistration_datas.each do |patientregistration_data| %>
<% if((patientregistration_data.id % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
  end %>
  <tr>
    <td class='<%= id %>'><%=h patientregistration_data.reg_no %></td>
    <td class='<%= id %>'><%=h patientregistration_data.mr_no %></td>
    <td class='<%= id %>'><%=h patientregistration_data.first_name %></td>
    <td class='<%= id %>'><%=h patientregistration_data.last_name %></td>
    <td class='<%= id %>'><%=h patientregistration_data.date_of_birth %></td>
    <td class='<%= id %>'><%=h patientregistration_data.gender %></td>
    <td class='<%= id %>'><%=h patientregistration_data.age %></td>
    <td class='<%= id %>'><%=h patientregistration_data.marital_status %></td>
    	<% if @value[1]==49 %>
	<td class='<%= id %>'><%= link_to 'Show', patientregistration_data%></td>
	<% end %>
	<% if @value[2]==49 %>
	<td class='<%= id %>'><%= link_to 'Edit', edit_patientregistration_data_path(patientregistration_data)%></td>
	<% end %>
	<% if @value[3]==49 %>
	<td class='<%= id %>'><%= link_to 'Destroy', patientregistration_data, :confirm => 'Are you sure?', :method => :delete%></td>
	<% end %>
  </tr>
  
<% end %>
</table>

<br /><center>
<% if @value[0]==49 %>
<%= link_to image_tag("Button_Images/create.png", :size => "60x25"), new_patientregistration_data_path  %>
<% end %></center>
