	<% if @value[1]==49 %>
    <td class='<%= id %>'><%= link_to 'Show', retain_bed %></td>
	<% end %>
	<% if @value[2]==49 %>
    <td class='<%= id %>'><%= link_to 'Edit', edit_retain_bed_path(retain_bed) %></td>
	<% end %>
	<% if @value[3]==49 %>
    <td class='<%= id %>'><%= link_to 'Destroy', retain_bed, :confirm => 'Are you sure?', :method => :delete %></td>
