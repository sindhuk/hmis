<%= image_tag("add.png")%><font size="3"><%= link_to 'New User', new_person_path %></font>
<br /><br />
<table cellpadding="4" >
<tr bgcolor =" #1797c0">
	<th>S.No</th>
	<th>User Name</th>
	<th>Profile Name</th>
	<th colspan="3">Permissions</th>
</tr>
<% @people.each do |person| %>
	<% if((person.id % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
	end %>
	<tr>
		<td class='<%= id %>'><%=h person.id %></td>
		<td class='<%= id %>'><%= person.name %></td>
		<td class='<%= id %>'><%= person.profile %></td>
		<td class='<%= id %>'><%= link_to 'Show', person %></td>
		<td class='<%= id %>'><%= link_to 'Edit', edit_person_path(person) %></td>
		<td class='<%= id %>'><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>

<% end %>
</table>

